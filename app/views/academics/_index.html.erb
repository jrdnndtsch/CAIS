
<table class="admin-table">
  <thead>
    <tr>
      <th>Used</th>
      <th>Subject</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @academics.each do |academic| %>
      <tr>
        <td><%= SchoolAcademic.where(academic_id: academic.id).count%> times</td>
        <% if academic.academic_type.present? %>
          <td><%= academic.academic_type.name %></td>
        <% else%>
          <td>Blank</td>
        <% end %>
        <td><%= academic.course %></td>
        <td><%= link_to 'Edit', edit_academic_path(academic) %></td>
        <td><% if SchoolAcademic.where(academic_id: academic.id).count == 0 %>
          <%= link_to 'Destroy', academic, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


