<p id="notice"><%= notice %></p>

<h1>Listing Campus Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campus_types.each do |campus_type| %>
      <tr>
        <td><%= campus_type.name %></td>
        <td><%= link_to 'Show', campus_type %></td>
        <td><%= link_to 'Edit', edit_campus_type_path(campus_type) %></td>
        <td><%= link_to 'Destroy', campus_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

